<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">


    <EditText
        android:id="@+id/search_id_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="请输入id"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/search_id_et"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/search_id_et"
        android:layout_toRightOf="@+id/search_id_et"
        android:text="查询" />


    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#f00"
        android:layout_below="@+id/search_button"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_below="@+id/ll_1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/id_item"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:hint="1"
            android:gravity="center"
            android:textColor="#f00"
            />

        <EditText
            android:id="@+id/name_item"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:hint="mark"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/age_item"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:hint="12"
            android:gravity="center"
            />


    </LinearLayout>

    <Button
        android:id="@+id/save_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/search_button"
        android:layout_alignStart="@+id/search_button"
        android:layout_below="@+id/ll_2"
        android:layout_marginTop="28dp"
        android:text="保存修改" />


</RelativeLayout>
